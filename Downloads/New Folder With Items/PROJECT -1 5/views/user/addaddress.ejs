<%- include("../layouts/userpartials/header.ejs") %>


  <body>
    <main>
      <div class="mb-4 pb-4"></div>
      <section class="shop-checkout container">
        <div class="checkout-steps">

        </div>

        <h2 style="">ADD ADDRESS</h2>
        <div id = "user-message-address" class="user-message" style="display: none;">Address Added Successfully</div>
        <form name="checkout-form" action="" method="post">
          <div class="checkout-form">
            <div class="billing-info__wrapper">

              <div class="rrow">
                <div class="col-md-3">
                  <div class="form-floating my-3">
                    <input type="text" class="form-control" id="addressUser" name="addressUser" placeholder="Name" required>
                    <label for="checkout_first_name">First Name</label>
                    <div class="invalid-feedback">Please enter your first name.</div>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="form-floating my-3">
                    <input type="text" class="form-control" id="addressUser" name="addressUser" placeholder="Name" required>
                    <label for="checkout_last_name">Last Name</label>
                    <div class="invalid-feedback">Please enter your last name.</div>
                  </div>
                </div>
                <div class="">
                </div>
                <div class="col-md-6">
                  <div class="form-floating mt-3 mb-3">
                    <input type="tel" class="form-control" id="mobile_number" name="mobile_number" placeholder="Mobile Number" required>
                    <label for="checkout_company_name">Phone *</label>
                    <div class="invalid-feedback">Please enter a valid mobile number.</div>
                    <small class="text-muted">This number will be used for delivery.</small>
                  </div>
                  <div class="form-floating mt-3 mb-3">
                    <input  name="email" type="email" class="form-control" id="checkout_street_address" placeholder="Email *">
                    <label for="checkout_company_name">Email*</label>
                  </div>
                  <div class="col-md-12">
                    <div class="mt-3">
                      <textarea class="form-control form-control_gray" placeholder="Address" cols="30" rows="4"></textarea>
                      <div class="invalid-feedback">Please enter your address.</div>
                    </div>
                  </div>
                  <div class="form-floating mt-3 mb-3">
                    <input name="city" type="text" class="form-control" id="checkout_street_address" placeholder="City *">
                    <label for="checkout_company_name">Town/City *</label>
                  </div>
                  <div class="form-floating mt-3 mb-3">
                    <input type="text" class="form-control" id="post_code" name="post_code" placeholder="Post Code" required>
                    <label for="checkout_company_name">Postcode *</label>
                  </div>

                  <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="default_address" name="default_address" value="false">
                    <label class="form-check-label" for="default_address">Set as Default Address</label>
                </div>

                  <button class="btn btn-primary w-100 text-uppercase" type="submit">Add</button>


                </div>


              </div>
            </div>
          </div>
        </form>
      </section>
    </main>

    <div class="mb-5 pb-xl-5"></div>




  </body>






  <div class="container user-content col-lg-8 col-md-9 col-sm-12 col-12" id="add-address-section" style="display: none;">
    <h2 class="mt-4 mb-4 profile-heading">Add Address</h2>
    <div class="card-body" id="add-address-card">
       <div id = "user-message-address" class="user-message" style="display: none;">Address Added Successfully</div>
        <div id="c_address" class="page-content">
            <form id="add-address-form" class="needs-validation" method="post" novalidate>
                <div class="form-group">
                
                </div>
                <div class="form-group">
                    <label for="address_line1" class="font-weight-bolder">Address Line 1</label>
                    <input type="text" class="form-control" id="address_line1" name="address_line1" placeholder="Address Line 1" required>
                    <div class="invalid-feedback">Please enter your address.</div>
                </div>
                <div class="form-group">
                    <label for="city" class="font-weight-bolder">City</label>
                    <input type="text" class="form-control" id="city" name="city" placeholder="City" required>
                    <div class="invalid-feedback">Please enter your city.</div>
                </div>
                <div class="form-group">
                    <label for="state" class="font-weight-bolder">State</label>
                    <input type="text" class="form-control" id="state" name="state" placeholder="State" required>
                    <div class="invalid-feedback">Please enter your post state.</div>
                </div>
                <div class="form-group">
                    <label for="post_code" class="font-weight-bolder">Post Code</label>
                    <input type="text" class="form-control" id="post_code" name="post_code" placeholder="Post Code" required>
                    <div class="invalid-feedback">Please enter your post code.</div>
                </div>
                <div class="form-group">
                    <label for="country" class="font-weight-bolder">Country</label>
                    <input type="text" class="form-control" id="country" name="country" placeholder="Country" required>
                    <div class="invalid-feedback">Please enter your country.</div>
                </div>
                <div class="form-group">
                    <label for="mobile_number" class="font-weight-bolder">Mobile Number</label>
                    <input type="tel" class="form-control" id="mobile_number" name="mobile_number" placeholder="Mobile Number" required>
                    <div class="invalid-feedback">Please enter a valid mobile number.</div>
                    <small class="text-muted">This number will be used for delivery.</small>
                    
                </div>
               
                <div><button type="submit" name="submit" class="f_13 btn btn-primary mt-3 mb-2 float-right" onclick="addAddress()" value="save">Add Address</button></div>
            </form>
        </div>
    </div>
 </div>

