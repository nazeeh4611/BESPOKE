  <body>
    <main>
      <div class="mb-4 pb-4"></div>
      <section class="shop-checkout container">
        
        <div class="mb-4 pb-4"></div>
        <div class="mb-4 pb-4"></div> 
        <h2>ADD ADDRESS</h2>
        <div id = "user-message-address" class="user-message" style="display: none;">Address Added Successfully</div>
        <form name="checkout-form" action="" method="post" onsubmit="return validateForm()" >
          <div class="checkout-form">
            <div class="billing-info__wrapper">

              <div class="rrow">
                <div class="col-md-3">
                  <div class="form-floating my-3">
                    <input type="text" class="form-control" id="AddFname" name="firstName" placeholder="Fname" required>
                    <label for="checkout_first_name">First Name</label>
                    <div id="FnameMessage" style="color: red;"></div>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="form-floating my-3">
                    <input type="text" class="form-control" id="AddLname" name="lastName" placeholder="Name" required>
                    <label for="checkout_last_name">Last Name</label>
                    <div id="LnameMessage" style="color: red;"></div>
                  </div>
                </div>
                <div class="">
                </div>
                <div class="col-md-6">
                  <div class="form-floating mt-3 mb-3">
                    <input type="tel" class="form-control" id="AddMobile" name="mobileNumber" placeholder="Mobile Number" required>
                    <label for="checkout_company_name">Phone *</label>
                    <div id="MobileMessage" style="color: red;"></div>
                    <small class="text-muted">This number will be used for delivery.</small>
                  </div>
                  <div class="form-floating mt-3 mb-3">
                    <input  name="email" type="email" class="form-control" id="AddEmail" placeholder="Email *">
                    <label for="checkout_company_name">Email*</label>
                    <div id="EmailMessage" style="color: red;"></div>
                  </div>
                  <div class="col-md-12">
                    <div class="mt-3">
                      <textarea class="form-control form-control_gray" name="address" id="AddAddress" placeholder="Address" cols="30" rows="4"></textarea>
                      <div id="AddrressMessage" style="color: red;"></div>
                    </div>
                  </div>
                  <div class="form-floating mt-3 mb-3">
                    <input name="city" type="text" class="form-control" id="AddCity" placeholder="City *">
                    <label for="checkout_company_name">Town/City *</label>
                    <div id="CityMessage" style="color: red;"></div>
                  </div>
                  <div class="form-floating mt-3 mb-3">
                    <input type="text" class="form-control" id="AddPost" name="postCode" placeholder="Post Code" required>
                    <label for="checkout_company_name">Postcode *</label>
                    <div id="PostMessage" style="color: red;"></div>
                  </div>

                  <!-- <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="default_address" name="default_address" value="false">
                    <label class="form-check-label" for="default_address">Set as Default Address</label>
                </div> -->

                  <button class="btn btn-primary w-100 text-uppercase" type="submit" >Add</button>


                </div>


              </div>
            </div>
          </div>
        </form>
      </section>
    </main>

    <div class="mb-5 pb-xl-5"></div>




  </body>

  <script>
    function validateForm() {
        // Get the values of form inputs
        var firstName = document.getElementById('AddFname').value.trim();
        var lastName = document.getElementById('AddLname').value.trim();
        var mobile = document.getElementById('AddMobile').value.trim();
        var email = document.getElementById('AddEmail').value.trim();
        var address = document.getElementById('AddAddress').value.trim();
        var city = document.getElementById('AddCity').value.trim();
        var pin = document.getElementById('AddPost').value.trim();

        // Get the elements to display validation messages
        var firstNameMessage = document.getElementById('FnameMessage');
        var lastNameMessage = document.getElementById('LnameMessage');
        var mobileMessage = document.getElementById('MobileMessage');
        var emailMessage = document.getElementById('EmailMessage');
        var addressMessage = document.getElementById('AddressMessage');
        var cityMessage = document.getElementById('CityMessage');
        var pinMessage = document.getElementById('PostMessage');

        // Check if the first name value is only spaces
        if (!firstName) {
            firstNameMessage.innerHTML = "First name cannot be empty or just spaces";
            return false;
        } else {
            firstNameMessage.innerHTML = ""; 
        }

        // Check if the last name value is only spaces
        if (!lastName) {
            lastNameMessage.innerHTML = "Last name cannot be empty or just spaces";
            return false;
        } else {
            lastNameMessage.innerHTML = ""; 
        }

        // Check if the mobile number value is only spaces or contains non-numeric characters
        if (!mobile || !/^\d+$/.test(mobile)) {
            mobileMessage.innerHTML = "Mobile number should be a valid number";
            return false;
        } else {
            mobileMessage.innerHTML = ""; 
        }

        // Check if the email value is empty or not a valid email format
        if (!email || !/\S+@\S+\.\S+/.test(email)) {
            emailMessage.innerHTML = "Please enter a valid email address";
            return false;
        } else {
            emailMessage.innerHTML = ""; 
        }

        // Check if the address value is only spaces
        if (!address) {
            addressMessage.innerHTML = "Address cannot be empty or just spaces";
            return false;
        } else {
            addressMessage.innerHTML = ""; 
        }

        // Check if the city value is only spaces
        if (!city) {
            cityMessage.innerHTML = "City cannot be empty or just spaces";
            return false;
        } else {
            cityMessage.innerHTML = ""; 
        }

        // Check if the PIN value is only spaces or contains non-numeric characters
        if (!pin || !/^\d+$/.test(pin)) {
            pinMessage.innerHTML = "PIN should be a valid number";
            return false;
        } else {
            pinMessage.innerHTML = ""; 
        }

        return true; // Allow the form submission
    }
</script>




